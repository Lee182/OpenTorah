// Imports
@import 'nib'
global-reset()

*
  box-sizing border-box
body
  font-size 1em
a
  color inherit
  text-decoration none
.flexwrap
  display flex
  flex-flow row wrap

#scroll, #scrollmenu
  flex 1 0 100%
  margin-right 1em
// Layout //
#reader
  margin 0 0 0 auto;
  padding 1em .5em 1em 1em
  width 61.8%
  @media screen and (max-width: 600px)
    width 100%
  background-color #FCF8DD

.nav
  display flex
.nav > li
  display flex
  flex-direction row
  width 33.333%
  padding 1em 0.5em

// Text is right to left at gloden ratio
#scroll.flexwrap
  flex-direction row-reverse
  align-content flex-start
.para
  flex: 1 0 100%
  opacity .3
.title {
  flex: 1 0 100%;
  text-align: center;
  padding: 2em;
  font-family: Verdana;
  font-size: 1.5em;
}
.space .heb
  color red !important
  opacity .3
  padding 0 2em
.left
  width 38.2%
  padding 1%



// Modules //
// Chapter title drop
#chapter
  display inline
  input
    width 2.5em
    text-align center
    font-size 1em
// Words in scroll section
.word, .verse
  direction rtl
  padding .9em 0.5em

// Title
h1
  margin 20px 5px 20px 5px
  text-align center
  text-transform uppercase
  font-size 2em // 26px
  font-family Open Sans

.footer
  position bottom
  background-color lighten(blue, 80%)
  padding 20px
  margin-top 5%
  text-align right
  strong
    color black
  p
    margin 10px
    color lighten(black, 50%)

@require 'heb'
@require 'scrollbars'
@require 'eng'
